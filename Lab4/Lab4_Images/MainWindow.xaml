<Window x:Class="Lab4_Images.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4_Images"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="OpenButton" Content="Open..." HorizontalAlignment="Left" VerticalAlignment="Top" Width="78" Height="30" Click="OpenButton_Click"/>
        <Image x:Name="initialImage" HorizontalAlignment="Left" Height="313" Margin="22,51,0,0" VerticalAlignment="Top" Width="354"/>
        <Image x:Name="filteredImage" HorizontalAlignment="Left" Height="313" Margin="416,51,0,0" VerticalAlignment="Top" Width="354"/>
        <Button x:Name="FilterButton" Content="Filter" HorizontalAlignment="Left" Margin="303,8,0,0" VerticalAlignment="Top" Width="87" Height="35" Click="FilterButton_Click"/>
        <Label Content="Window size" HorizontalAlignment="Left" Margin="113,9,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="windowSizeTextBox" HorizontalAlignment="Left" Height="23" Margin="208,13,0,0" TextWrapping="Wrap" Text="7" VerticalAlignment="Top" Width="71"/>

    </Grid>
</Window>
